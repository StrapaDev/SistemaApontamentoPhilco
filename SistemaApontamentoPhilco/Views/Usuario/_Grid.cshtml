@using SistemaApontamentoPhilco.Model.Model
@model List<Usuario>

<script>
    $(document).ready(function ()
    {
        $('#table').DataTable({
            "destroy": true,
            "scrollX": false,
            "paging": false,
            "info": false,
            "searching": false,
            "language": {
                "emptyTable": "Sem Registros"
            }
        });
    });
</script>

<div class="row">
    <div class="col-md-12">
        <div class="card card-topline">
            <div class="card-body ">
                <table class="table table-striped table-bordered table-hover order-column full-width" id="table">
                    <thead>
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Login</th>
                            <th scope="col">Perfil</th>
                            <th style="width:130px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (Usuario usuario in Model)
                            {
                                <tr>

                                    <td>@usuario.Nome</td>
                                    <td>@usuario.Login</td>
                                    <td>@(usuario.Perfil != null ? usuario.Perfil.Descricao : "")</td>
                                    <td>
                                        <a href="/Usuario/Editar?Id=@usuario.Id" class="btn btn-primary btn-xs" title="Editar">
                                            <i class="material-icons">mode_edit</i>
                                        </a>
                                        <button class="btn btn-danger btn-xs" title="Excluir" onclick="Excluir(@usuario.Id);">
                                            <i class="material-icons">delete</i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



